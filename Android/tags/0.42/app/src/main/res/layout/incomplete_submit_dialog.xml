<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/main_container"
    android:padding="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/connection_box"
    android:layout_height="wrap_content">

    <aero.developer.bagnet.CustomViews.DialogTextView
        android:id="@+id/title"
        android:gravity="center"
        style="@style/text_xxmedium_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <aero.developer.bagnet.CustomViews.DialogTextView
        android:id="@+id/details"
        android:layout_marginTop="20dp"
        style="@style/text_small_primary"
        android:gravity="center"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/details"
        android:id="@+id/buttonsConatiner"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_gray_background"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="@string/submit" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cancel_background"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:text="@string/cancel"/>

    </LinearLayout>

    </RelativeLayout>

