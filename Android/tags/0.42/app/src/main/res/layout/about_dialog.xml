<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:example="http://schemas.android.com/apk/res-auto"
    android:id="@+id/about_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans_gray">


    <aero.developer.bagnet.CustomViews.ScrollableTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/marquee"
        android:focusableInTouchMode="false"
        android:layout_gravity="center_horizontal"
        example:marqueeSpeed="50"
        example:autoStartMarquee="false"
        example:textColor="@android:color/white"
        example:textSize="@dimen/text_20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <View
        android:id="@+id/blockBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>