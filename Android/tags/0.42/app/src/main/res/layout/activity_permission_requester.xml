<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32sp">

        <ImageView
            android:id="@+id/permissionIconView"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:background="@drawable/white_background_circle" />

        <aero.developer.bagnet.CustomViews.HeaderTextView
            android:id="@+id/permissionName"
            style="@style/text_xsmall_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32sp"
            android:gravity="center" />

        <aero.developer.bagnet.CustomViews.HeaderTextView
            android:id="@+id/permissionDescription"
            style="@style/text_small_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:gravity="center" />

        <aero.developer.bagnet.CustomViews.CustomButton
            android:id="@+id/btnGrant"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/padding_10"
            android:layout_marginTop="32sp"
            android:background="@drawable/white_save_shape"
            android:gravity="center"
            android:minHeight="40dp"
            android:minWidth="@dimen/button_270dp"
            android:padding="8dp"
            android:paddingBottom="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_50"
            android:paddingRight="@dimen/padding_50"
            android:paddingTop="@dimen/padding_10"
            android:text="@string/permission_yes"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14sp" />

        <aero.developer.bagnet.CustomViews.CustomButton
            android:id="@+id/btnDeny"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/padding_10"
            android:layout_marginTop="32sp"
            android:background="@drawable/white_save_shape"
            android:gravity="center"
            android:minHeight="40dp"
            android:minWidth="@dimen/button_270dp"
            android:padding="8dp"
            android:paddingBottom="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_50"
            android:paddingRight="@dimen/padding_50"
            android:paddingTop="@dimen/padding_10"
            android:text="@string/permission_no"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14sp" />

    </LinearLayout>
</ScrollView>
