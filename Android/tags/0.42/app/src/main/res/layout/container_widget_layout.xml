<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/padding_16"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/uld_image"
        android:layout_width="@dimen/image_size_120"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:src="@drawable/countour"
        android:layout_alignParentRight="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/image__20dp" android:id="@+id/parent_container"
            android:layout_marginStart="@dimen/padding_30"
            android:layout_toStartOf="@+id/uld_image"
            android:background="@drawable/container_widget_shape"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/image__20dp"
            android:layout_marginLeft="@dimen/padding_30"
            android:layout_toLeftOf="@+id/uld_image">

            <aero.developer.bagnet.CustomViews.HeaderTextView
                android:id="@+id/container_ULD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/uld_name"
                android:layout_gravity="left"
                android:text="ContainerId"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignLeft="@+id/uld_name" />

            <aero.developer.bagnet.CustomViews.SingleLine_AutoResizeTextView
                android:id="@+id/uld_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/container_ULD"
                android:paddingTop="2dp"
                android:text="ULD Name"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold"
                android:singleLine="true"
                custom:typefaceAsset="fonts/SourceSansPro-Semibold.otf"
                />

            <aero.developer.bagnet.CustomViews.HeaderTextView
                android:id="@+id/base_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uld_name"
                android:paddingTop="2dp"
                android:text="@string/size"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold" />

            <aero.developer.bagnet.CustomViews.HeaderTextView
                android:id="@+id/base_size_variable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/uld_contour"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/base_size"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_14sp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/base_size" />


            <aero.developer.bagnet.CustomViews.HeaderTextView
                android:id="@+id/uld_contour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/base_size"
                android:paddingTop="2dp"
                android:text="@string/contour"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold" />

            <aero.developer.bagnet.CustomViews.HeaderTextView
                android:id="@+id/uld_contour_variable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/uld_type"
                android:layout_alignEnd="@+id/base_size_variable"
                android:layout_toEndOf="@+id/base_size"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_14sp"
                android:layout_alignRight="@+id/base_size_variable"
                android:layout_toRightOf="@+id/base_size" />

            <aero.developer.bagnet.CustomViews.HeaderTextView
                android:id="@+id/uld_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uld_contour"
                android:paddingTop="2dp"
                android:text="@string/uld_type"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold" />

            <aero.developer.bagnet.CustomViews.HeaderTextView
                android:id="@+id/uld_type_variable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/uld_type"
                android:layout_alignEnd="@+id/uld_contour_variable"
                android:layout_toEndOf="@+id/uld_type"
                android:text="@string/contour"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_14sp"
                android:layout_alignRight="@+id/uld_contour_variable"
                android:layout_toRightOf="@+id/uld_type" />

        </RelativeLayout>

</RelativeLayout>

